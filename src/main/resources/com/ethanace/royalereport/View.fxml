<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane prefHeight="173.0" prefWidth="389.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ethanace.royalereport.Controller">
   <tabs>
      <Tab closable="false" text="Reports">
         <content>
            <HBox prefWidth="400.0">
               <children>
                  <VBox alignment="CENTER_LEFT" fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0">
                     <children>
                        <Label text="Clan ID" />
                        <TextField fx:id="clanTagField" promptText="Enter Clan Tag">
                           <VBox.margin>
                              <Insets top="-5.0" />
                           </VBox.margin>
                        </TextField>
                        <ComboBox fx:id="reportList" minWidth="160.0" promptText="War Performance" />
                        <HBox minWidth="160.0" spacing="22.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#buildReport" text="Build" />
                              <Button mnemonicParsing="false" onAction="#addToFavourites" text="Add Favourite" />
                           </children>
                        </HBox>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
                     </padding>
                  </VBox>
                  <StackPane prefHeight="150.0" prefWidth="50.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#populateClanTag" text="Copy" StackPane.alignment="TOP_CENTER" />
                     </children>
                     <padding>
                        <Insets top="32.0" />
                     </padding>
                  </StackPane>
                  <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0">
                     <children>
                        <Label text="Favourites" />
                        <ListView fx:id="favouritesList" prefHeight="60.0" prefWidth="150.0">
                           <VBox.margin>
                              <Insets top="-5.0" />
                           </VBox.margin>
                        </ListView>
                        <HBox spacing="53.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#removeFromFavourites" text="Delete" />
                              <Button mnemonicParsing="false" onAction="#savePreferences" text="Save" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </content>
      </Tab>
      <Tab closable="false" text="Settings">
         <content>
            <HBox prefHeight="100.0" prefWidth="200.0" />
         </content>
         <content>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="142.0" prefWidth="279.0">
                     <children>
                        <Label text="IPv4 Address">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="ipField" promptText="IP associated with token">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </TextField>
                        <Label text="Authorisation Token">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextArea fx:id="authField" prefHeight="200.0" prefWidth="200.0" promptText="Token associated with IP" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Your current IP address" />
                        <Label fx:id="ipLabel" text="192.168.0.0.1">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <Label alignment="CENTER" contentDisplay="TOP" maxHeight="75.0" maxWidth="169.0" prefHeight="75.0" prefWidth="169.0" text="If the IPv4 address is different to your current IP address, you'll need a new authorisation token" textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
